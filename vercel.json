{
  "version": 2,
  "name": "recipe-diy-app",
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "routes": [
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://your-backend-domain/api"
  }
}
